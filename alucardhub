-- Carrega a biblioteca OrionLib
local success, OrionLib = pcall(function()
    return loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()
end)

-- Verifica se OrionLib foi carregada com sucesso
if not success or not OrionLib then
    warn("Falha ao carregar a biblioteca OrionLib!")
    return
end

-- Cria a janela principal
local Window = OrionLib:MakeWindow({
    Name = "Alucard Hub",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "OrionTest"
})

-- Função para carregar scripts externos com tratamento de erro
local function LoadScript(scriptURL)
    local success, err = pcall(function()
        loadstring(game:HttpGet(scriptURL))()
    end)
    if not success then
        warn("Erro ao carregar o script: " .. tostring(err))
    end
end

-- Aba Jujutsu-Infinite
local Tab0 = Window:MakeTab({
    Name = "Jujutsu-Infinite",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

Tab0:AddButton({
    Name = "Lyzer Hub",
    Callback = function()
        LoadScript("https://raw.githubusercontent.com/Kazeruy/LyzerHub/main/ScriptMain")
    end
})

-- Aba Lootify
