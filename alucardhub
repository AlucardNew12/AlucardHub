-- Notificação inicial
OrionLib:MakeNotification({
    Name = "Status",
    Content = success and "Carregado com sucesso!" or "Erro ao carregar a interface!",
    Image = "rbxassetid://4483345998",
    Time = 5
})

-- Inicializa a interface
OrionLib:Init()
